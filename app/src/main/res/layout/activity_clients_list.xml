<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/client_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="@string/lista_klienteve"
                android:textColor="#000"
                android:textSize="18sp"
                android:fontFamily="@font/lato_regular"/>

            <EditText
                android:id="@+id/search_edittext"
                android:imeOptions="flagNoFullscreen"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:drawableLeft="@android:drawable/ic_menu_search"
                android:hint="@string/kerko"
                android:textColor="#000"
                android:fontFamily="@font/lato_regular"/>

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="#f0f0f0"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <TextView
                android:id="@+id/client_foto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/foto"
                android:textColor="#000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/lato_bold"/>

            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#000" />

            <TextView
                android:id="@+id/client_shifra"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="#"
                android:textColor="#000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/lato_bold"/>

            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#000" />

            <TextView
                android:id="@+id/client_unik"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/numri_unik"
                android:textColor="#000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/lato_bold"/>

            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#000" />

            <TextView
                android:id="@+id/client_emri"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/emri"
                android:textColor="#000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/lato_bold"/>

            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#000" />

            <TextView
                android:id="@+id/client_kontakti"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/kontakt"
                android:textColor="#000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/lato_bold"/>

            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#000" />

            <TextView
                android:id="@+id/client_bilanci"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/bilanci"
                android:textColor="#000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/lato_bold"/>

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000" />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/article_recyler"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</layout>