<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="org.planetaccounting.saleAgent.shpenzimet.ShpenzimetActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="#0288D1"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:fontFamily="@font/lato_regular"
                    android:gravity="center"
                    android:text="Shpenzim"
                    android:textColor="#FFFFFF"
                    android:textSize="25sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|center_horizontal|center"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="16dp"
                    android:orientation="vertical">

                    <AutoCompleteTextView
                        android:id="@+id/furnitori_edittext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/edit_field_corner"
                        android:fontFamily="@font/lato_regular"
                        android:hint="Furnitori"
                        android:imeOptions="actionDone"


                        android:minHeight="50dp"
                        android:nextFocusDown="@id/tipi_edittext" />

                    <TextView
                        android:id="@+id/data"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/edit_field_corner"
                        android:fontFamily="@font/lato_regular"
                        android:hint="Data"
                        android:minHeight="50dp"
                        android:nextFocusDown="@id/nr_fatures"

                        android:singleLine="true"
                        android:textSize="18dp" />

                    <AutoCompleteTextView
                        android:id="@+id/tipi_edittext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/edit_field_corner"
                        android:fontFamily="@font/lato_regular"
                        android:hint="Tipi"
                        android:imeOptions="actionDone"
                        android:minHeight="50dp"
                        android:nextFocusDown="@id/nr_fatures"
                        android:singleLine="true" />

                    <EditText
                        android:id="@+id/nr_fatures"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/edit_field_corner"
                        android:fontFamily="@font/lato_regular"
                        android:hint="Nr Fatures"
                        android:imeOptions="actionDone"
                        android:minHeight="50dp"


                        android:nextFocusDown="@id/shuma_editText"
                        android:singleLine="true" />

                    <EditText
                        android:id="@+id/shuma_editText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/edit_field_corner"
                        android:digits="0123456789."
                        android:fontFamily="@font/lato_regular"

                        android:hint="Shuma"
                        android:imeOptions="actionDone"
                        android:inputType="numberDecimal"


                        android:minHeight="50dp"
                        android:nextFocusDown="@id/comment_edittext"
                        android:singleLine="true" />

                    <EditText
                        android:id="@+id/comment_edittext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/edit_field_corner"
                        android:fontFamily="@font/lato_regular"
                        android:hint="Komenti"
                        android:imeOptions="actionDone"


                        android:maxHeight="150dp"
                        android:minHeight="50dp" />

                    <Button
                        android:id="@+id/buttonInkaso"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/button_rounder_corner"
                        android:text="Proceso"
                        android:textColor="@android:color/white"
                        android:fontFamily="@font/lato_bold"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</layout>
