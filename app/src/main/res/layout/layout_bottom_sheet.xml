<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottomSheetLayout"
        android:background="@drawable/bottom_shett_background"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/title_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="19dp"
                android:text="Konfiguro Listen"
                android:textColor="#000" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title_layout"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp" >

            <LinearLayout
                android:id="@+id/no_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@android:color/white"
                    android:gravity="start|center"
                    android:text="Nr."
                    android:textAllCaps="false"
                    android:textSize="17sp"
                    android:textColor="#000"/>

                <Switch
                    android:id="@+id/no_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:textColor="#b5b5b5"
                    android:checked="true"
                    android:thumbTint="@color/white"
                    android:track="@color/planetPurple"
                    android:background="@drawable/button_rounder_corner"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/date_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@android:color/white"
                    android:gravity="start|center"
                    android:text="Data"
                    android:textAllCaps="false"
                    android:textSize="17sp"
                    android:textColor="#000"/>

                <Switch
                    android:id="@+id/date_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:textColor="#b5b5b5"
                    android:textSize="17sp"
                    android:checked="true"
                    android:thumbTint="@color/white"
                    android:track="@color/planetPurple"
                    android:background="@drawable/button_rounder_corner"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/client_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@android:color/white"
                    android:gravity="start|center"
                    android:text="Klienti"
                    android:textAllCaps="false"
                    android:textSize="17sp"
                    android:textColor="#000"/>

                <Switch
                    android:id="@+id/client_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:textColor="#b5b5b5"
                    android:textSize="17sp"
                    android:checked="true"
                    android:thumbTint="@color/white"
                    android:track="@color/planetPurple"
                    android:background="@drawable/button_rounder_corner"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/clientUnit_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@android:color/white"
                    android:gravity="start|center"
                    android:text="Njesia"
                    android:textAllCaps="false"
                    android:textSize="17sp"
                    android:textColor="#000"/>

                <Switch
                    android:id="@+id/clientUnit_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:textColor="#b5b5b5"
                    android:textSize="17sp"
                    android:checked="true"
                    android:thumbTint="@color/white"
                    android:track="@color/planetPurple"
                    android:background="@drawable/button_rounder_corner"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/amount_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@android:color/white"
                    android:gravity="start|center"
                    android:text="Vlera"
                    android:textAllCaps="false"
                    android:textSize="17sp"
                    android:textColor="#000"/>

                <Switch
                    android:id="@+id/amount_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:textColor="#b5b5b5"
                    android:textSize="17sp"
                    android:checked="true"
                    android:thumbTint="@color/white"
                    android:track="@color/planetPurple"
                    android:background="@drawable/button_rounder_corner"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/save_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@android:color/white"
                    android:gravity="start|center"
                    android:textAllCaps="false"
                    android:textSize="17sp" />

                <Button
                    android:id="@+id/save_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:textColor="#fff"
                    android:textSize="17sp"
                    android:text="Ruaj"
                    android:background="@drawable/button_rounder_corner"/>
            </LinearLayout>

        </LinearLayout>

    </android.support.constraint.ConstraintLayout>

</layout>
